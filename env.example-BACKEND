# Copy this file to .env and fill in your values

# Anthropic API Key (REQUIRED)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# For development:
ALLOWED_ORIGINS=http://localhost:3000

# For production, use your actual frontend URL:
# ALLOWED_ORIGINS=https://your-app.pages.dev

# To allow all origins (not recommended for production):
# ALLOWED_ORIGINS=*

# To allow multiple origins (comma-separated):
# ALLOWED_ORIGINS=https://your-app.pages.dev,https://www.yourdomain.com
